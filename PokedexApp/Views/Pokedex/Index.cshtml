@using Pokedex.Common;

@model List<PokemonListingViewModel>

@{
    ViewData["Title"] = "My " + Constants.Pokedex;
    
}

<h1>@ViewData["Title"]</h1>

<div class="pokemon__container">
    @foreach (var pokemon in Model)
    {
        <a class="pokemon__item pokemon__item--hover" asp-controller="Pokedex" asp-action="Detail" asp-route-id="@pokemon.MyPokemonId">
            tbd
        </a>
    }

    @if(Model.Count == 0)
    {
        <h2>You have no @Constants.Pokemon in your @Constants.Pokedex!</h2>
    }
</div>